<?xml version="1.0"?>

<moduleArgs>
    <version>
	    <flag attr="$Id: clusterArgumentsBG_saphyr_phi.xml 7157 2017-11-06 21:38:59Z tanantharaman $"/>
    </version>
    <defaultMinThreads>
        <minthreads attr="16"/>
    </defaultMinThreads>
    <reducedMinThreads>
        <minthreads attr="8"/>
    </reducedMinThreads>
    <reducedMinThreads2>
        <minthreads attr="8"/>
    </reducedMinThreads2>
    <reducedMinThreads3>
        <minthreads attr="8"/>
    </reducedMinThreads3>
    <largeNodeMem>
        <flag attr="-maxmem"     val0="2048" display="Large jobs maximum memory (Gb)" tab="MQR:ASSEMBLE" group="Global memory options" default0="256" description="Maximum amount of RAM memory in Gb to use for large jobs"/>
	<flag attr="-maxvirtmem" val0="0" />
    </largeNodeMem>    
    <tinyNodeMem>
        <flag attr="-maxmem"     val0="7.5" display="Small jobs maximum total memory (Gb)" tab="ASSEMBLE" group="Global memory options" default0="7" description="Maximum amount of total RAM memory in Gb to use for small jobs"/>
    </tinyNodeMem>    
    <splitNodeMem>
        <flag attr="-maxmem"     val0="7.5" display="Pairwise jobs maximum memory (Gb)" tab="ASSEMBLE" group="Global memory options" default0="7" description="Maximum amount of RAM memory in Gb to use for pairwise jobs"/>
    </splitNodeMem>    
    <largeJobMem>
        <flag attr="-pe" val0="def_slot" val1="12"/>
        <flag attr="-l" val0="mem_req=16G,s_vmem=16G"/>
        <flag attr="-soft" val0="-l tmem"/>
        <flag attr="-w" val0="n"/>
        <flag attr="-ac" val0="status=$status_log_filename"/>
    </largeJobMem>
    <largeJob>
        <flag attr="-pe" val0="def_slot" val1="42"/>
        <flag attr="-l" val0="mem_req=32G,s_vmem=32G"/>
        <flag attr="-l" val0="tmem"/>
        <flag attr="-w" val0="n"/>
        <flag attr="-ac" val0="status=$status_log_filename"/>
    </largeJob>
    <mediumHostJob>
        <flag attr="-pe" val0="def_slot" val1="4"/>
        <flag attr="-l" val0="mem_req=20G,s_vmem=20G"/>
        <flag attr="-soft" val0="-l sjob,ljob,lljob,lmem"/>
        <flag attr="-w" val0="n"/>
        <flag attr="-ac" val0="status=$status_log_filename"/>
    </mediumHostJob>
    <smallHostJob>
        <flag attr="-pe" val0="def_slot" val1="8"/>
        <flag attr="-l" val0="mem_req=3.8G,s_vmem=3.8G"/>
        <flag attr="-soft" val0="-l sjob,ljob,lljob,lmem"/>
        <flag attr="-w" val0="n"/>
        <flag attr="-ac" val0="status=$status_log_filename"/>
    </smallHostJob>
    <smallJob>
        <flag attr="-pe" val0="def_slot" val1="12"/>
	<flag attr="-l" val0="mem_req=3.8G,s_vmem=3.8G"/>
        <flag attr="-soft" val0="-l sjob,ljob,lljob,lmem"/>
        <flag attr="-w" val0="n"/>
        <flag attr="-ac" val0="status=$status_log_filename"/>
    </smallJob>
    <micJob>
       <flag attr="-pe" val0="def_slot" val1="8"/>
       <flag attr="-l" val0="mem_req=3.8G,s_vmem=3.8G"/>
        <flag attr="-soft" val0="-l sjob,ljob,lljob,lmem"/>
        <flag attr="-w" val0="n"/>
       <flag attr="-ac" val0="status=$status_log_filename"/>
    </micJob>
    <micJob2>
       <flag attr="-pe" val0="def_slot" val1="8"/>
       <flag attr="-l" val0="mem_req=7.6G,s_vmem=7.6G"/>
        <flag attr="-soft" val0="-l sjob,ljob,lljob,lmem"/>
        <flag attr="-w" val0="n"/>
       <flag attr="-ac" val0="status=$status_log_filename"/>
    </micJob2>
    <tinyJob>
      <include val0="micJob"/>
    </tinyJob>
    <tinyJob2>
      <include val0="micJob2"/>
    </tinyJob2>
    <sampleChar>
      <include val0="largeJob"/>
    </sampleChar>
    <hash>
      <include val0="largeJob"/>
    </hash>
    <splitting>        
        <flag attr="-pe" val0="def_slot" val1="4"/>
        <flag attr="-ac" val0="status=$status_log_filename"/>
        <flag attr="-w" val0="n"/>
        <flag attr="-l" val0="mem_req=23G,s_vmem=23G"/>
        <flag attr="-soft" val0="-l sjob,ljob,lljob,lmem"/>
    </splitting>
    <autoNoise0>
      <include val0="largeJob"/>
    </autoNoise0>
    <autoNoise1>
      <include val0="largeJob"/>
    </autoNoise1>
    <pairwise>        
       <flag attr="-pe" val0="def_slot" val1="8"/>
       <flag attr="-l" val0="mem_req=8G,s_vmem=8G"/>
       <flag attr="-ac" val0="status=$status_log_filename"/>
    </pairwise>
    <cmapMerge>
      <include val0="smallHostJob"/>
    </cmapMerge>
    <assembly>
      <include val0="largeJobMem"/>
    </assembly>
    <refineA>
       <flag attr="-pe" val0="def_slot" val1="4"/>
       <flag attr="-l" val0="mem_req=3.8G,s_vmem=3.8G"/>
       <flag attr="-ac" val0="status=$status_log_filename"/>
       <flag attr="-p" val0="-200" />
    </refineA>
    <refineAMinThreads>
      <include val0="reducedMinThreads2"/>
    </refineAMinThreads>
    <refineB>
      <include val0="smallJob"/>
    </refineB>
    <refineB0>
       <flag attr="-pe" val0="def_slot" val1="16"/>
       <flag attr="-l" val0="mem_req=7G,s_vmem=7G"/>
       <flag attr="-ac" val0="status=$status_log_filename"/>
    </refineB0>
    <refineB1>
       <flag attr="-pe" val0="def_slot" val1="16"/>
       <flag attr="-l" val0="mem_req=2G,s_vmem=2G"/>
       <flag attr="-ac" val0="status=$status_log_filename"/>
       <flag attr="-p" val0="-500" />
    </refineB1>
    <refineB1MinThreads>
       <include val0="reducedMinThreads"/>
    </refineB1MinThreads>
    <refineFinal>
      <include val0="smallJob"/>
    </refineFinal>
    <refineFinal0>
      <include val0="mediumHostJob"/>
    </refineFinal0>
    <refineFinal1>
      <include val0="tinyJob"/>
      <flag attr="-p" val0="-500" />
    </refineFinal1>
    <refineFinal1MinThreads>
       <include val0="reducedMinThreads"/>
    </refineFinal1MinThreads>
    <extension>
      <include val0="smallJob"/>
    </extension>
    <extension0>
      <include val0="mediumHostJob"/>
    </extension0>
    <extension1>
      <include val0="tinyJob"/>
      <flag attr="-p" val0="-500" />
    </extension1>
    <extension1MinThreads>
       <include val0="reducedMinThreads"/>
    </extension1MinThreads>
    <merge>
      <include val0="largeJob"/>
    </merge>
    <characterizeDefault>
      <include val0="largeJob"/>
    </characterizeDefault>
    <characterizeStrict>
      <include val0="largeJob"/>
    </characterizeStrict>  
    <alignmol>
      <include val0="largeJobMem"/>
    </alignmol>
    <alignmolvref>
      <include val0="largeJob"/>
      <flag attr="-p" val0="-500" />
    </alignmolvref>
    <svdetect>
      <include val0="largeJobMem"/>
    </svdetect>
    <svdetectMinThreads>
       <include val0="reducedMinThreads3"/>
    </svdetectMinThreads>
</moduleArgs>
